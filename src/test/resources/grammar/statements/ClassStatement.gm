@object ClassStatement =
    [ @set(`accessModifier`: AccessModifier) ws ]
    "class" ws @set(`name`: Name)
    [ ws @set(`genericParameters`: GenericParameterGroup) ]
    [ ws "extends" ws @set(`superClass`: TypeRef) ]
    [ ws "implements" ws @set(`superInterfaces`: TypeRefList) ]
    [ ws @set(`members`: ClassMemberList) ]

@list ClassMemberList = "{" { ws ClassMember } ws "}"

ClassMember =
    ClassField |
    ClassFunction |
    ClassGetter |
    ClassSetter |
    ClassOperation |
    ClassConstructor

@object ClassField =
    [ @set(`accessModifier`: AccessModifier) ws ]
    @set(`fieldType`: FieldType) ws @set(`name`: Name)
    [ i-ws @set(`dataType`: TypeRef) ]
    [ ws "=" ws @set(`initialValue`: Expression) ]

@object ClassFunction =
    [ @set(`accessModifier`: AccessModifier) ws ]
    "function" ws @set(`name`: Name) ws @set(`parameters`: ParameterGroup)
    [ i-ws @set(`returnType`: TypeRef) ]
    [ ws @set(`body`: InstructionBody) ]

@object ClassGetter =
    [ @set(`accessModifier`: AccessModifier) ws ]
    "getter" ws @set(`name`: Name)
    [ i-ws @set(`returnType`: TypeRef) ]
    [ ws @set(`body`: InstructionBody) ]

@object ClassSetter =
    [ @set(`accessModifier`: AccessModifier) ws ]
    "setter" ws @set(`name`: Name) ws @set(`parameters`: ParameterGroup)
    [ ws @set(`body`: InstructionBody) ]

@object ClassOperation =
    [ @set(`accessModifier`: AccessModifier) ws ]
    "operation" ws @set(`name`: Name) ws @set(`parameters`: ParameterGroup)
    [ i-ws @set(`returnType`: TypeRef) ]
    [ ws @set(`body`: InstructionBody) ]

@object ClassConstructor =
    [ @set(`accessModifier`: AccessModifier) ws ]
    "constructor" ws @set(`name`: Name) ws @set(`parameters`: ParameterGroup)
    [ ws ":" ws @set(`superInvocation`: InvocationInst) ]
    [ ws @set(`body`: InstructionBody) ]
