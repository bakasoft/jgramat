ws = {'\s \n \r \t'}

alpha = 'a-z A-Z _ @ $'
digit = '0-9'
hex = 'a-f A-F 0-9'

EscapedChar =
    "\\" (
        @string("\"" | "\\" | "/") |
        @map(`\n`: "n") |
        @map(`\r`: "r") |
        @map(`\t`: "t") |
        @map(`\u0008`: "b") |
        @map(`\u000C`: "f") |
        "u" @hex-to-char({4; hex})
    )


@join NameDelimited = "`" { EscapedChar | @string(<"`">)} "`"
@string NameKeyword = alpha { alpha | digit }

Name = NameKeyword | NameDelimited
