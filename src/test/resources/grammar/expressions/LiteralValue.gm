@object DecInteger = @set(`value`: @string({+ '1-9' } {'0-9'}))

@object HexInteger = "0x" @set(`value`: @string({+ 'a-f A-F 0-9'}))

@number DecNumber  =
    ["-"] ("0" | '1-9' { '0-9' })
    [ "." {+ '0-9'} ]
    [ ['e E'] ['- +'] {+ '0-9' } ]

@boolean Boolean = "true" | "false"

@null Null = "null"

@join String = "\"" { EscapedChar | @string(<"\"">) } "\""

LiteralValue = DecInteger | HexInteger | DecNumber | Boolean | Null | String
