Test = ^ Expression $
@pass Test `a*b + c`
@pass Test `a + b*c`
@pass Test `(a + b)*c`
@pass Test `(a + b)*c == 1/3 != 3`

Expression = Level3

@object Equ = @set(`left`: Level2) ws "==" ws @set(`right`: Level3)
@object Neq = @set(`left`: Level2) ws "!=" ws @set(`right`: Level3)
Level3 = Equ | Get | Level2

@object Add = @set(`left`: Level1) ws "+" ws @set(`right`: Level2)
@object Sub = @set(`left`: Level1) ws "-" ws @set(`right`: Level2)
Level2 = Add | Sub | Level1

@object Mul = @set(`left`: Level0) ws "*" ws @set(`right`: Level1)
@object Div = @set(`left`: Level0) ws "/" ws @set(`right`: Level1)
Level1 = Mul | Div | Level0

Grp = "(" Expression ")"
@object Var = @set(`value`: letters)
@object Lit = @set(`value`: digits)
Level0 = Grp | Var | Lit

@string digits: {+'0-9'}
@string letters: {+'a-z A-Z'}
ws: {'\s \n \r \t'}