@string num: {+'0-9'}
@string name: {+'a-z A-Z'}

@object Var = @set(`name`: name)
@object Lit = @set(`value`: num)

// Wrappers
@object Grp = "(" @set(`expression`: Expr) ")"

// Unary Operators
@object Pos = "+" @set(`expression`: Expr)
@object Neg = "-" @set(`expression`: Expr)

// Binary Operators
@object Mul = @set(`left`: Expr) "*" @set(`right`: Expr)
@object Div = @set(`left`: Expr) "/" @set(`right`: Expr)
@object Sum = @set(`left`: Expr) "+" @set(`right`: Expr)
@object Sub = @set(`left`: Expr) "-" @set(`right`: Expr)

Expr = Grp
     | Pos | Neg
     | Mul | Div
     | Sum | Sub
     | Lit | Var

@debug test = ^ Expr $

@pass test `a*b+c`